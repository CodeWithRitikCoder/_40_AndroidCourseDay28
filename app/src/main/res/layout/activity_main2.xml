<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/music_player_bg"
    tools:context=".MainActivity2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginTop="330dp"
        android:layout_marginStart="6dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageViewForMusicLogo"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/music_logo" />

        <ImageView
            android:id="@+id/imageViewForSong0"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_music1" />

        <ImageView
            android:id="@+id/imageViewForSong1"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_music2" />

        <ImageView
            android:id="@+id/imageViewForSong2"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_music3" />

        <ImageView
            android:id="@+id/imageViewForSong3"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_music4" />

        <ImageView
            android:id="@+id/imageViewForSong4"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_music5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewForSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="75dp"
        android:text="@string/click_on_play_button"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:thumbTint="#FFEB3B"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewForPrevious"
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:srcCompat="@drawable/previous_icon" />

            <ImageView
                android:id="@+id/imageViewForPause"
                android:layout_width="55sp"
                android:layout_height="55sp"
                android:alpha="1"
                android:layout_marginTop="40sp"
                android:layout_marginStart="20sp"
                app:srcCompat="@drawable/pause_icon" />

            <ImageView
                android:id="@+id/imageViewForPlay"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:alpha="1"
                android:layout_marginTop="60dp"
                android:layout_marginStart="20sp"
                app:srcCompat="@drawable/play_icon" />

        <ImageView
            android:id="@+id/imageViewForStop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40sp"
            android:layout_marginStart="20sp"
            android:alpha="1"
            app:srcCompat="@drawable/stop_icon" />

        <ImageView
            android:id="@+id/imageViewForNext"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="20sp"
            app:srcCompat="@drawable/next_icon" />

    </LinearLayout>

</LinearLayout>